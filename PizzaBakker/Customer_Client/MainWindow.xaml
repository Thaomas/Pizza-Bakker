<Window x:Class="Customer_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Customer_Client"
        xmlns:views="clr-namespace:Customer_Client.Views"
        xmlns:viewModels="clr-namespace:Customer_Client.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewModels:HomePageViewModel}">
                <views:HomePageView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding Path=CurrentViewModel}" />
    </Grid>
</Window>
